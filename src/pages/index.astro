---
import { Masonry } from 'astro-masonry';
import Layout from '../layouts/Layout.astro';
import { getHomePosts } from '../services';
import Post from '../components/Post.astro';
const homePosts = await getHomePosts()
---


<Layout title="Portafolio">
	<main>
		<section class="space-y-4 md:space-y-10 px-2 md:px-10">
			<!-- <h2 class="text-4xl md:text-6xl font-semibold text-center">Portafolio</h2> -->
			<div class="w-full border-t border-white/10 py-4 md:py-10">
				<Masonry
					class="flex gap-4 md:gap-10"
					columnClass="flex flex-col gap-4 md:gap-10"
					breakpointCols={{
						default: 3,
						1100: 2
					}}
					sortByHeight={true}
				>
					{homePosts.map((post) => (
						<Post post={post} />
					))}
	
				</Masonry>
			</div>
			
		</section>
	</main>

</Layout>

